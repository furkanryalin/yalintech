---
import { Image } from 'astro:assets';

interface Props {
  name: string;
  role: string;
  phone?: string;
  email?: string;
  imageUrl?: string;
}

const { name, role, phone, email, imageUrl } = Astro.props;
---

<div class="group bg-white dark:bg-gray-900 border border-gray-200 dark:border-gray-800 rounded-xl p-6 hover:border-blue-brand dark:hover:border-blue-400 transition-all duration-300 hover-lift">
  <div class="mb-6">
    {imageUrl ? (
      imageUrl.startsWith('http') ? (
        <Image 
          src={imageUrl}
          alt={name}
          width={64}
          height={64}
          class="w-16 h-16 rounded-full object-cover mb-4 group-hover:scale-110 transition-transform duration-300 border-2 border-blue-brand dark:border-blue-400 cursor-pointer"
          data-lightbox-image={imageUrl}
          data-lightbox-name={name}
          loading="lazy"
        />
      ) : (
        <img 
          src={imageUrl} 
          alt={name}
          class="w-16 h-16 rounded-full object-cover mb-4 group-hover:scale-110 transition-transform duration-300 border-2 border-blue-brand dark:border-blue-400 cursor-pointer"
          data-lightbox-image={imageUrl}
          data-lightbox-name={name}
          loading="lazy"
          decoding="async"
        />
      )
    ) : (
      <div class="w-16 h-16 rounded-full bg-blue-brand dark:bg-blue-500 flex items-center justify-center text-xl font-bold text-white mb-4 group-hover:scale-110 transition-transform duration-300">
        {name.split(' ').map(n => n[0]).join('')}
      </div>
    )}
    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-1">{name}</h3>
    <p class="text-blue-brand dark:text-blue-400 font-medium text-sm">{role}</p>
  </div>
  
  <div class="space-y-3 text-sm">
    {phone && (
      <a
        href={`tel:${phone.replace(/\s/g, '')}`}
        class="flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-blue-brand dark:hover:text-blue-400 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
        </svg>
        {phone}
      </a>
    )}
    
    {email && (
      <a
        href={`mailto:${email}`}
        class="flex items-center gap-2 text-gray-600 dark:text-gray-400 hover:text-blue-brand dark:hover:text-blue-400 transition-colors"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
        {email}
      </a>
    )}
  </div>
</div>
