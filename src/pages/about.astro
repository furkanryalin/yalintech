        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
      </svg>
    </button>
    <div class="lightbox-content">
      <img id="lightbox-image" class="lightbox-image" src="" alt="" />
      <p id="lightbox-name" class="text-white text-center mt-4 text-lg font-semibold"></p>
    </div>
  </div>
</Layout>

<script>
  import { gsap } from 'gsap';
  import { ScrollTrigger } from 'gsap/ScrollTrigger';
  import { initScrubReveal, initMagneticButtons, initStaggerReveal } from '../scripts/animations';
  
  gsap.registerPlugin(ScrollTrigger);

  // Lightbox functionality
  const lightboxOverlay = document.getElementById('lightbox-overlay');
  const lightboxImage = document.getElementById('lightbox-image');
  const lightboxName = document.getElementById('lightbox-name');
  const lightboxClose = document.getElementById('lightbox-close');
  const lightboxImages = document.querySelectorAll('[data-lightbox-image]');

  function openLightbox(imageUrl: string, name: string) {
    if (lightboxImage && lightboxName && lightboxOverlay) {
      lightboxImage.src = imageUrl;
      lightboxName.textContent = name;
      lightboxOverlay.classList.add('active');
      document.body.style.overflow = 'hidden';
    }
  }

  function closeLightbox() {
    if (lightboxOverlay) {
      lightboxOverlay.classList.remove('active');
      document.body.style.overflow = '';
    }
  }

  lightboxImages.forEach((img) => {
    img.addEventListener('click', () => {
      const imageUrl = img.getAttribute('data-lightbox-image');
      const name = img.getAttribute('data-lightbox-name');
      if (imageUrl && name) {
        openLightbox(imageUrl, name);
      }
    });
  });

  if (lightboxClose) {
    lightboxClose.addEventListener('click', closeLightbox);
  }

  if (lightboxOverlay) {
    lightboxOverlay.addEventListener('click', (e) => {
      if (e.target === lightboxOverlay) {
        closeLightbox();
      }
    });
  }

  // Close on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && lightboxOverlay?.classList.contains('active')) {
      closeLightbox();
    }
  });

  // Sticky Team Section with improved animations
  function initStickyTeamSection() {
    const teamSection = document.querySelector('.team-sticky-section');
    if (!teamSection) return;

    const cards = document.querySelectorAll('.founder-card');
    if (cards.length === 0) return;

    // Use stagger reveal for smoother card animations
    initStaggerReveal('.founder-card', 0.2);
  }

  // Initialize animations when DOM is ready
  function initAnimations() {
    initStickyTeamSection();
    initScrubReveal();
    initMagneticButtons();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initAnimations);
  } else {
    initAnimations();
  }
</script>
